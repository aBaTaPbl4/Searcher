<Window x:Class="ScanX.wndAbout"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About Scan-X" Height="219" Width="300"
        Icon="/Images/monitor.png" 
        ResizeMode="NoResize"  WindowStartupLocation="CenterScreen" 
        SnapsToDevicePixels="True" FontFamily="Arial">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/ControlStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Foreground="Black" FontSize="32" FontWeight="Bold" Text="VTDev " Margin="3">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#6DAAD6" ShadowDepth="2" BlurRadius="9"/>
                    </TextBlock.Effect>
                </TextBlock>
                <TextBlock Foreground="{StaticResource GlossBackgroundGradient}" FontSize="32" FontWeight="Bold" FontFamily="Tahoma" Text="Scan-X"/>
            </StackPanel>
            <TextBlock TextWrapping="Wrap" Margin="12">
            <TextBlock.Text>
                All property and intellectual rights Reserved by VTDev.com December 2011
        Read the license.txt file for more information on product licensing and contact.
            </TextBlock.Text>
        </TextBlock>
            <Button Foreground="White" Name="btnClose" Margin="4" Content="Close" VerticalAlignment="Bottom" HorizontalAlignment="Right"
                    Click="btnClose_Click" Height="31" Width="82" />
        </StackPanel>
    </Grid>
</Window>
